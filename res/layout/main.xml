<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:inner="http://schemas.android.com/apk/res/com.selfishpilot.innerShadowTextView"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@android:color/darker_gray"
        >
    <TextView
            android:id="@+id/textView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="1) using emboss filter"
            android:textColor="@android:color/white"
            android:textSize="48sp"
            />

    <com.selfishpilot.innerShadowTextView.ShadowTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="2) using porterDuff mode"
            android:textSize="48sp"
            android:textColor="@android:color/white"
            inner:innerShadowColor = "@android:color/black"
            inner:innerShadowRadius = "5"
            inner:innerShadowDY = "2"
            />
</LinearLayout>

